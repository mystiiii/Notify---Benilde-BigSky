{
  "name": "notify-desktop",
  "version": "1.0.0",
  "description": "Benilde BigSky Automation Tool",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-frontend\" \"wait-on http://localhost:5173 && electron .\"",
    "start-backend": "cd express-backend && npm start",
    "start-frontend": "cd react-frontend && npm run dev",
    "build-frontend": "cd react-frontend && npm run build",
    "pack": "electron-builder --dir",
    "dist": "npm run build-frontend && electron-builder"
  },
  "author": "Lei",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "tree-kill": "^1.2.2"
  },
  "build": {
    "appId": "com.lei.notify",
    "productName": "Notify",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron.js",
      "express-backend/**/*",
      "react-frontend/dist/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "express-backend",
        "to": "express-backend",
        "filter": [
          "!**/*.spec.js",
          "!**/test/**"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets"
    }
  }
}